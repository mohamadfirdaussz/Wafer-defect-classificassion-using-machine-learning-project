{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üîß Setup Environment (One-Click)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\setup.bat"
            },
            "linux": {
                "command": "python ${workspaceFolder}/setup.py"
            },
            "osx": {
                "command": "python ${workspaceFolder}/setup.py"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
